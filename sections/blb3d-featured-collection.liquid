{%- comment -%}
  BLB3D Featured Collection Section
  Dark background, product grid with hover effects
{%- endcomment -%}

<section class="blb3d-featured-collection" style="background: #0F0F1E !important;">
  <div class="blb3d-featured-collection__container page-width">
    {%- if section.settings.eyebrow != blank -%}
      <p class="blb3d-eyebrow blb3d-featured-collection__eyebrow">{{ section.settings.eyebrow }}</p>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h2 class="blb3d-featured-collection__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <p class="blb3d-featured-collection__description">{{ section.settings.description }}</p>
    {%- endif -%}

    {%- if section.settings.collection != blank -%}
      {%- assign collection = section.settings.collection -%}
      {%- assign products_to_show = section.settings.products_to_show -%}

      <div class="blb3d-featured-collection__grid">
        {%- for product in collection.products limit: products_to_show -%}
          <a href="{{ product.url }}" class="blb3d-product-card">
            <div class="blb3d-product-card__media">
              {%- if product.featured_media -%}
                <img
                  src="{{ product.featured_media | image_url: width: 400 }}"
                  srcset="{{ product.featured_media | image_url: width: 200 }} 200w,
                          {{ product.featured_media | image_url: width: 300 }} 300w,
                          {{ product.featured_media | image_url: width: 400 }} 400w"
                  sizes="(max-width: 749px) 50vw, 25vw"
                  alt="{{ product.featured_media.alt | escape }}"
                  loading="lazy"
                  width="{{ product.featured_media.width }}"
                  height="{{ product.featured_media.height }}"
                  class="blb3d-product-card__image"
                >
              {%- else -%}
                <div class="blb3d-product-card__placeholder">
                  {{ 'product-1' | placeholder_svg_tag: 'blb3d-product-card__placeholder-svg' }}
                </div>
              {%- endif -%}

              {%- if product.compare_at_price > product.price -%}
                <span class="blb3d-product-card__badge">Sale</span>
              {%- endif -%}
            </div>

            <div class="blb3d-product-card__info">
              <h3 class="blb3d-product-card__title">{{ product.title }}</h3>
              <div class="blb3d-product-card__price">
                {%- if product.compare_at_price > product.price -%}
                  <span class="blb3d-product-card__price-sale">{{ product.price | money }}</span>
                  <span class="blb3d-product-card__price-compare">{{ product.compare_at_price | money }}</span>
                {%- else -%}
                  <span>{{ product.price | money }}</span>
                {%- endif -%}
              </div>
            </div>
          </a>
        {%- endfor -%}
      </div>

      {%- if section.settings.show_view_all -%}
        <div class="blb3d-featured-collection__footer">
          <a href="{{ collection.url }}" class="blb3d-button--outline blb3d-featured-collection__button">
            View All {{ collection.title }}
            <svg class="blb3d-featured-collection__arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      {%- endif -%}

    {%- else -%}
      {%- comment -%} Placeholder products when no collection selected {%- endcomment -%}
      <div class="blb3d-featured-collection__grid">
        {%- for i in (1..4) -%}
          <div class="blb3d-product-card blb3d-product-card--placeholder">
            <div class="blb3d-product-card__media">
              <div class="blb3d-product-card__placeholder">
                {{ 'product-1' | placeholder_svg_tag: 'blb3d-product-card__placeholder-svg' }}
              </div>
            </div>
            <div class="blb3d-product-card__info">
              <h3 class="blb3d-product-card__title">Product Title</h3>
              <div class="blb3d-product-card__price">
                <span>$29.99</span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .section-blb3d-featured-collection,
  .section-blb3d-featured-collection > *,
  .blb3d-featured-collection {
    background: #0F0F1E !important;
    background-color: #0F0F1E !important;
  }

  .blb3d-featured-collection {
    padding: 80px 0;
  }

  .blb3d-featured-collection__container {
    text-align: center;
  }

  .blb3d-featured-collection__eyebrow {
    margin-bottom: 0.5rem;
  }

  .blb3d-featured-collection__heading {
    color: #FFFFFF;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    line-height: 1.2;
  }

  .blb3d-featured-collection__description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.0625rem;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto 2.5rem auto;
  }

  .blb3d-featured-collection__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    margin-bottom: 2.5rem;
  }

  /* Product Card */
  .blb3d-product-card {
    text-decoration: none;
    text-align: left;
    display: block;
    transition: transform 150ms ease;
  }

  .blb3d-product-card:hover {
    transform: translateY(-4px);
  }

  .blb3d-product-card__media {
    position: relative;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 1;
    margin-bottom: 1rem;
  }

  .blb3d-product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 300ms ease;
  }

  .blb3d-product-card:hover .blb3d-product-card__image {
    transform: scale(1.05);
  }

  .blb3d-product-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.03);
  }

  .blb3d-product-card__placeholder-svg {
    width: 50%;
    height: auto;
    opacity: 0.2;
  }

  .blb3d-product-card__badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: #EE7A08;
    color: #FFFFFF;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    padding: 4px 10px;
    border-radius: 4px;
  }

  .blb3d-product-card__info {
    padding: 0 4px;
  }

  .blb3d-product-card__title {
    color: #FFFFFF;
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .blb3d-product-card__price {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9375rem;
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .blb3d-product-card__price-sale {
    color: #EE7A08;
    font-weight: 600;
  }

  .blb3d-product-card__price-compare {
    color: rgba(255, 255, 255, 0.4);
    text-decoration: line-through;
    font-size: 0.875rem;
  }

  /* View All Button */
  .blb3d-featured-collection__footer {
    text-align: center;
  }

  .blb3d-button--outline {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    color: #FFFFFF;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 150ms ease;
  }

  .blb3d-button--outline:hover {
    border-color: #026DF8;
    background: rgba(2, 109, 248, 0.1);
    gap: 12px;
  }

  .blb3d-featured-collection__arrow {
    width: 20px;
    height: 20px;
  }

  /* Responsive */
  @media (max-width: 989px) {
    .blb3d-featured-collection__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 749px) {
    .blb3d-featured-collection {
      padding: 60px 0;
    }

    .blb3d-featured-collection__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .blb3d-product-card__media {
      border-radius: 8px;
    }

    .blb3d-product-card__title {
      font-size: 0.9375rem;
    }

    .blb3d-button--outline {
      width: 100%;
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "BLB3D Featured Collection",
  "tag": "section",
  "class": "section-blb3d-featured-collection",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Section label",
      "default": "Shop"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Check out our most popular 3D printed products, ready to ship."
    },
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View All' button"
    }
  ],
  "presets": [
    {
      "name": "BLB3D Featured Collection"
    }
  ]
}
{% endschema %}
